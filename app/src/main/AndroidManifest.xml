<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lwinmoehein.io.myarnetmaung">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_love"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_love"
        android:supportsRtl="true"
        android:theme="@style/MainAppTheme">
        <activity android:name=".acitivity.ReminderActivity"
            android:theme="@style/AppTheme"
            android:parentActivityName=".MainActivity"
            android:label="Reminders"></activity>
        <activity
            android:label="Privacy"
            android:name=".acitivity.PrivacyActivity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme" />
        <activity android:name=".acitivity.GoogleSignInActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:theme="@style/FullscreenTheme" />
    </application>

</manifest>